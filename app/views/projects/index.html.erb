<p id="notice"><%= notice %></p>

<div class ="container">
  <div class ="page-header">
    <h1>Welcome to Kalina's Portfolio!</h1>
    <p>I am a Junior at The University of Colorado in Colorado Springs, and I am pursuing a B.A. in Computer Science. This portfolio represents all of my greatest projects throughout college.
  </div>
</div>

<br>
<br>

<table style="width:40%" align="center" class="table table-bordered">
  <thead>
    <h2 align="center">Projects<span><h3 align="center"><%= link_to 'New Project', new_project_path, class: 'btn btn-success' %></span></h3></h2>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-outline-warning' %></td>
          <td><%= link_to 'Destroy', project, class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Show', project, class: 'btn btn-outline-primary' %></td>
        <% else %>
          <td><%= link_to 'Show', project, class: 'btn btn-outline-primary' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


