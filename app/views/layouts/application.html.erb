<!DOCTYPE html>
<html lang="en">
<head>
  <title>Portfolio</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="active nav-link" href="/"><button type="button" class="btn btn-outline-primary">Home</button></a>
            </li>
        </ul>
    </div>

    <div class="mx-auto order-0">
      <% if user_signed_in? %>
        <a class="navbar-brand mx-auto" href="#">Welcome! <strong><%= current_user.email %></strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
            <span class="navbar-toggler-icon"></span>
        </button>

        <% else %>
          <a class="navbar-brand mx-auto" href="#">Viewer</a>
        <% end %>
    </div>

    <!-- Signed in can see edit and log out buttons-->
    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link " href="#"><%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-outline-warning' %>  </a>
          </li>
        <li class="nav-item">
          <a class="nav-link " href="#"><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-danger'  %>  </a>
        </li>
      
        <!-- Not signed in cant see edit and log out buttons-->
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="#"><%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary2' %></a>
          </li>
          <li>
            <a class="nav-link" href="#"><%= link_to 'Log in', new_user_session_path, class: 'btn btn-info'%></a>
          </li>
        <% end %>
      </ul>
    </div>
</nav>

        <%= yield %>
    </div>
  </div>
</nav>
</body>
</html>
